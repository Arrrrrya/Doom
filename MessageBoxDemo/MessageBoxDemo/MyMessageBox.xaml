<Window x:Class="MessageBoxDemo.MyMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessageBoxDemo"
        mc:Ignorable="d"
        Title="MyMessageBox" Height="200" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Height="170">
        <StackPanel>
            <Canvas x:Name="tips" Height="85" VerticalAlignment="Top" Margin="0">
                <Label x:Name="tip" Content="Label" Canvas.Left="16" Canvas.Top="39"/>
            </Canvas>
            <Canvas x:Name="btns" Background="#FFEEEEEE" Height="85" VerticalAlignment="Top" Margin="0">
                <Button x:Name="button" Content="确定" Canvas.Left="35" Canvas.Top="28" Width="75" Click="button_Click"/>
                <Button x:Name="button2" Content="取消" Canvas.Left="164" Canvas.Top="28" Width="75" Click="button2_Click"/>
            </Canvas>
        </StackPanel>
    </Grid>
</Window>
