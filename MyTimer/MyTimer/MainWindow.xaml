<Window x:Class="MyTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTimer"
        mc:Ignorable="d"
        Title="看书and逗猫の倒计时" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas>
            <Label x:Name="label" Content="倒计时:" Canvas.Left="85" Canvas.Top="44"/>
            <ComboBox x:Name="comboBox" Canvas.Left="165" Canvas.Top="46" Width="120" SelectedIndex="0" SelectionChanged="comboBox_SelectionChanged">
                <ComboBoxItem Content="30分钟"/>
                <ComboBoxItem Content="60分钟"/>
                <ComboBoxItem Content="90分钟"/>
                <ComboBoxItem Content="120分钟"/>
            </ComboBox>
            <Label x:Name="labelRestTime" Content="00:00:00" FontSize="50" Canvas.Left="85" Canvas.Top="83"/>
            <Button x:Name="btnStart" Content="开始" Canvas.Left="50" Canvas.Top="180" Width="75" Click="btnStart_Click"/>
            <Button x:Name="btnPause" Content="暂停" Canvas.Left="150" Canvas.Top="180" Width="75" Click="btnPause_Click"/>
            <Button x:Name="btnReset" Content="重置" Canvas.Left="250" Canvas.Top="180" Width="75" Click="btnReset_Click"/>


        </Canvas>
    </Grid>
</Window>
