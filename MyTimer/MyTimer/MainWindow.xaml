<Window x:Class="MyTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTimer"
        mc:Ignorable="d"
        Title="Yuri的倒计时" Height="82" Width="252" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid Background="LightBlue" MouseDown="Grid_MouseDown" MouseRightButtonUp="Grid_MouseRightButtonUp">
        <Border BorderThickness="1" BorderBrush="Red">
            <Canvas Height="82" Width="252">
                <TextBox x:Name="input" BorderBrush="{x:Null}" BorderThickness="0" Height="30" Width="210" FontSize="18" VerticalContentAlignment="Center" Background="Transparent">倒计时</TextBox>
                <TextBox BorderBrush="{x:Null}" BorderThickness="0" x:Name="textBox" Canvas.Top="30" Height="50" FontSize="35" Background="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextWrapping="Wrap" Text="0" Width="150"/>
                <Label x:Name="label" Content="分钟" Height="50" Width="100" FontSize="33" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Canvas.Left="150" Canvas.Top="30"/>
            </Canvas>
        </Border>
    </Grid>
</Window>
